{% extends 'base.twig' %}

{% block body %}
  {% include 'banniereBlog.twig' %}
  <div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="m-3">Les derniers articles</h1>
            {% for post in posts %}
                <div class="card mb-3">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h2>{{ post.title }}</h2>
                        <div>
                            {% for tag in post.getTags() %}
                                <span class="badge text-bg-secondary mb-2"><a href="./tags/{{ tag.id }}">{{ tag.name }}</a></span>
                            {% endfor %}
                        </div>
                        <small class="text-bg-primary">Publi√© le {{ post.getCreatedAt() }}</small>
                        <p>{{ post.getExcerpt() }}</p>
                        <a href="./posts/{{post.id}}" class="btn btn-primary"> Lire Plus... </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
  </div>
{% endblock %}
